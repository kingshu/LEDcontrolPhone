<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.krishnabh.ledcontrolphone.MainActivity"
    android:background="#000000">

    <Switch
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Power          "
        android:id="@+id/switch1"
        android:checked="false"
        android:textColor="#b8b8b8"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change color"
        android:id="@+id/button"
        android:layout_marginBottom="21dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/switch1" />

    <View android:id="@+id/rectangle"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:background="#000000"
        android:visibility="visible"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:src="@drawable/fadebg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/fadedbg"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/button"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:src="@drawable/tvstand"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/rectangle"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />

</RelativeLayout>
